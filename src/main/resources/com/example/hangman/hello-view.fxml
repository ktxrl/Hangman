<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hangman.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <HBox prefHeight="25.0" prefWidth="209.0">
      <children>
         <TextField fx:id="inputText" />
          <Button onAction="#buttonClicked" text="Guess" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <Label fx:id="answer" text="Label" />
   <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
</VBox>
